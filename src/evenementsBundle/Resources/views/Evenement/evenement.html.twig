{% extends 'evenementsBundle::evenement.html.twig' %}

{% block extra%}
<div class="p-3 mt-4 shadow footer-contact">
    <h4 class="custom-contact">Contact Organisateur</h4>
    <p>
      {{event.user.username}} <br>
       {% if event.user.nomPrenom == null %} - {% else %} {{event.user.nomPrenom}} {% endif %}<br>
       {% if event.user.adresse == null %} - {% else %} {{event.user.adresse}} {% endif %}<br>
      <strong>Phone:</strong> {% if event.user.numeroTel == null %} - {% else %} {{event.user.numeroTel}} {% endif %}<br>
      <strong>Email:</strong> {{event.user.email}}<br>
    </p>
</div>
{% endblock %}

{% block evenement_body%}
<div class="row">
    <h4 class="col-md-12 mb-1 ">{{event.titre}}</h4>
    <div id="infos_bar" class="mb-0 col-md-12 d-flex justify-content-end">
        <div class="mb-0">
            <span data-toggle="tooltip" data-placement="top" title="organisateur de l'evenement"><i class="fas fa-user"></i> <strong>{{event.user.username}}</strong></sp>
            <span>|</span>
            <span title="nombre de vue"><i class="fas fa-eye"></i> {{event.vues}} vues</span>
            <span>|</span>
            <span title="nombre d'inscriptions"><i class="fas fa-users"></i> {{inscription|length}} inscriptions</span>
            <span>|</span>
            <span title="date de modification"><i class="fas fa-clock"></i> {{event.dateModification |date('d/m/y')}}</span>
        </div>    
    </div>
</div>

<hr>
<div class="row mb-4">
    <div class="col-md-8">
        {% if event.urlImage == null %}
            <img src="{{asset('images/evenements/default.png')}}" class="img-fluid" style="position: relative;">
        {% else %}
            <img src="{{asset('images/evenements/'~event.urlImage)}}" class="img-fluid" style="position: relative;">
        {% endif %}
    </div>
    <div  id="details_bar" class="col-md-4 p-3 bg-white shadow  d-flex flex-column justify-content-between">
        <div>
            <p class="mb-2"><span class="custom"><i class="fas fa-map-marker-alt"></span></i> {{event.adresse}}</p>
            <p class="mb-2"><span class="custom"><i class="fas fa-calendar-alt"></i> </span> {{event.date | localizeddate('long', 'long', 'null', null)}}</p>
            {% if event.prix == null %}
                <p class="mb-2"><span class="custom"><span><i class="far fa-credit-card"></i></span> prix:</span> Gratuit</p>
            {% else %}
                <p class="mb-2"><span class="custom"><i class="far fa-credit-card"></i> prix:</span> {{event.prix}} $</p>
            {% endif %}
            {% if event.billetsRestants == null %}
                <p class="mb-2"><span class="custom"><i class="fas fa-users"></i> places:</span> - </p>
            {% else %}
                <p class="mb-2"><span class="custom"><i class="fas fa-users"></i> places:</span> {{event.billetsRestants}} </p>
            {% endif %}
                <p class="mb-4 row">
                    <span class="col-md-4 pr-0 custom"><i class="fas fa-tags"></i> tags: </span>
                    {% if event.categories is empty %}
                        <span> - </span>
                    {% else %}
                        <span class="col-md-8 pr-0 pl-0">
                            {% for c in event.categories %}
                                <a href="#" class="mr-1" style="color: #2f3138; font-size: 13px;">#{{c.nom}} </a>
                            {% endfor %}
                        </span>    
                    {% endif %}
                </p>
        </div>
        <div>    
            <div class="d-flex justify-content-between ml-1 mr-1 mt-2" id="icon_wrapper">
                <div id="icon_bar_toolbar" >
                    <a  title="partager l'evenement" id="share_{{event.id}}" data-id="{{event.id}}" class="custom" ><i class="fas fa-share-alt mr-3"></i></a>
                    <a  class="bookmark custom" id="bookmark" title="{% if app.user in event.evenementSauvegardes %} enlever de la liste des favoris {% else %} ajouter Ã  la liste des favoris {% endif %}" data-id="{{event.id}}" onclick="bookmark(event,{{event.id}},'{{path('evenements_bookmark_event')}}')"><i
                            class="{% if app.user in event.evenementSauvegardes %} fas {% else %} far {% endif %} fa-bookmark mr-3"></i></a>
                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="autre options" role="button"
                        id="autre_{{event.id}}" class="custom"><i class="fas fa-ellipsis-v mr-3"></i></a>
                    <div class="dropdown-menu" aria-labelledby="autre_{{event.id}}">
                        <button class="dropdown-item" href="#" {% if (event.user ==  app.user) or (eventSig != null) %}disabled{% endif %}
                            data-toggle="modal" data-target="#signalModal" ><i class="fas fa-ban"></i> signaler
                            l'evenement</button>
                        <button class="dropdown-item" href="#" {% if event.user ==  app.user %}disabled{% endif %}><i
                                class="far fa-envelope"></i> contacter l'organisateur</button>
                    </div>
                </div>
                {% if app.user == event.user %}
                    <a class="btn btn-sm btn-custom" href="#gestion_event" ><i class="fas fa-cogs"></i> gerer</a>
                {% else %}
                    <a class="btn btn-sm btn-custom" href="#" ><i class="fas fa-check"></i> inscrire</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% if images is not empty %}
<div class="row" id="galery-container">
    <div id="gallery" class="wow fadeInUp">
        <div class="owl-carousel gallery-carousel">
            {% for i in images %}
            <img src="{{asset('images/evenements_dossier/'~i.url)}}" height="75" alt="">
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}
<div class="row mb-4 p-4 shadow">
    <h6 class="col-md-12"><i class="fas fa-info-circle"></i> Description:</h6>
    <hr>
    {% if event.description != null %}
        <p id="new_line">{{event.description}}</p>
    {% else %}
        <p id="new_line" class="text-center mb-1 col-md-12">Pas de description pour cette evenement</p>    
    {% endif %}
</div>    
<div class="row shadow p-3 mb-4" data-lat="{{event.latLng}}">
    <h6 class="m-3 col-md-12"><i class="fas fa-map-marked-alt"></i> map: </h6>
    <div class="col-md-12" id="map" style="height: 200px;"></div>
</div>    
<script>
    let coords = $('#map').parent().attr('data-lat');
    let array= coords.split("/").map((i)=>{return Number(i)});
    var map = L.map('map', {
        zoom: 13,
        center : array
    });
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker(array).addTo(map);
</script>
{% if event.user == app.user %}
    <div class="row d-flex align-items-center" id="gestion_event">
        <h5 class="col-md-7 mb-0"> <i class="fas fa-cogs"></i> Gestion de l'evenement</h5>
        <div id="button-bar" class="col-md-5">
            <a class="btn btn-info" href="{{path('evenements_update_event',{id:event.id})}}"><i class="fas fa-edit"></i> modifier </a>
            <a class="btn btn-danger" href="#" ><i class="fas fa-trash-alt"></i> supprimer </a>
        </div>
    </div>
    <hr>
    <div class="row mt-3 mb-4 p-4 shadow">
        <div class="col-md-12 d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0">Liste des participants</h5>
            <button class="btn btn-info"><i class="fas fa-print"></i> imprimer</button>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"><i class="fas fa-user"></i> nom prenom</th>
                    <th scope="col"><i class="fas fa-address-card"></i> adresse</th>
                    <th scope="col"><i class="fas fa-envelope"></i> email</th>
                    <th scope="col"><i class="fas fa-phone"></i> numero tel</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
    <div class="row mb-4 p-4 shadow">
        <div class="col-md-12 p-0">
        <div class="col-md-12 d-flex justify-content-between align-items-center ">
            <h5 class="mb-0"><i class="fas fa-camera-retro"></i> gerer vos photos</h5>
            <div>
                <input type="file" name="file" id="file" value="ajouter photo" multiple hidden>
                <button class="btn btn-info" onclick="addImage()"><i class="fas fa-plus"></i> ajouter image(s)</button>
            </div>    
        </div>
        <div class="mt-3 ml-4 row " id="images-container">
        </div>
        <div class="row ml-4 mt-1">
            <button class="btn btn-success" style="display:none;" id="submit_images" onclick="submitImages('{{path('evenements_add_image',{id:event.id})}}')"><i class="fas fa-check-square"></i> valider</button>
        </div>
        </div>
        <div class="col-md-12 p-0">
        <hr>
        <h5 class="col-md-12">vos photos : </h5>
        <div class="row ml-0" id="images">
            {% for i in images %}
                <div class="m-1 p-0 images">
                    <img src="{{asset('images/evenements_dossier/'~i.url)}}" width="100%" height="100" data-id="{{i.id}}">
                    <div class="d-flex justify-content-center align-items-center"><i class="fas fa-trash-alt" style="display:none" onclick="deleteImage(event,'{{path('evenements_delete_image',{id:i.id})}}')"></i></div>
                </div>
            {% endfor %}
        </div>
        </div>
    </div>   
{% endif %}    

<div class="fixed-bottom col-md-3 p-3 shadow bookmark-info">
    <strong></strong>
</div>
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script src="{{asset('js/evenements/oneEvent.js')}}"></script>
{% endblock %}