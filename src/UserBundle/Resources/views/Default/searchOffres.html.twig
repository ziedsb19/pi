                color: #ed4a43;
            }

            .project-details .dl-horizontal dt {
                color: #3c4547;
            }

            .thumbnail:hover {
                border: solid 1px #ed4a43;
            }

            .caption-category {
                color: #ed4a43;
            }

            .color .testimonials.owl-theme .owl-dots .owl-dot span {
                background-color: #ed4a43;
                border: solid 2px #ffffff;
            }

            .widget-title:before {
                background-color: #ed4a43;
            }

            .sidebar .widget-title {
                color: #ed4a43;
