    <body class="page-template page-template-templates page-template-event_grid page-template-templatesevent_grid-php page page-id-16 wide ltr body-light multipage woocommerce-no-js wpb-js-composer js-comp-ver-5.6 vc_responsive" >

    <div class="container_boxed">
        <div class="wrapper">


            <div class="page-section with-sidebar sidebar-right first-section">
                <div class="container">

                    <div id="sidebar" class="sidebar col-lg-3 col-md-4 col-sm-12">
                        <div class="widget"><h4 class="widget-title">Filter</h4>
                                {{ form_start(form) }}
                                <tr>
                                    <td>Sponsor</td>
                                    <td>{{ form_widget(form.nomSponsors) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_widget(form.find) }}</td>
                                </tr>
                                {{ form_end(form) }}

                        </div>
                    </div>

                    <div class="col-lg-9 col-md-8 col-sm-12 mobile_clear nopadding_mobile">
                        <div class="listing-meta list-short">
                            <div class="filters">
                                <h3 class="post-title">Liste des sponsors</h3>
                            </div>
                        </div>

                        <div class="tab-content">


                            <div id="grid-view"  class="tab-pane fade in active" role="tabpanel">

                                <div class="row thumbnails events">
                                    {% for o in offres %}
                                        <div class="col-md-4 col-sm-6 " >
                                            <div class="thumbnail no-padding border border-info">
                                                <div class="media_img">
                                                    <img src="{{ asset('uploads/images/' ~ o.image) }}" alt="">
                                                </div>
                                                <div class="caption">
                                                    <h3 class="caption-title"><a href="#">{{ o.nomSponsors }}</a></h3>
                                                    <p class="caption-category"><i class="fa fa-file-text-o"></i> Le {{ o.dateModif |date('d/m/Y')}} Lieu :  {{ o.adresse }}</p>
                                                    <p class="caption-price">{{ o.eMail }}</p>
                                                    <p class="caption-text">{{ o.descriptionOffre }}</p>
                                                    <p class="caption-more"><a href="{{ path('OneOff',{'id':o.id}) }}" class="btn btn-theme">Detail</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
