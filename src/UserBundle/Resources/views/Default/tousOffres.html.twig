                            <h5 class="custom-contact">Filter :</h5>

                            <select class="form-control" id="tri">
                                <option value="1" {% if (app.request.get('sortBy') != 3 or app.request.get('sortBy') != 2 ) %} selected
                                        {% endif %}>Tous les Sponsors</option>
                                <option value="2" {% if app.request.get('sortBy') == 2 %} selected {% endif %}>
                                    Offres les plus récentes</option>
                                <option value="3" {% if app.request.get('sortBy') == 3 %} selected {% endif %}>Offres par ordre alphabétique</option>
                            </select>
                        </div>
                        <span class="float-right" data-toggle="collapse" href="#filter" role="button" aria-expanded="false"
                              aria-controls="filter"></span>

                        <div class="p-3 shadow mb-4" id="filter-block">
                            <h5 class="custom-contact">Recherche avancée :</h5>
                            <form action="{{path('filterO')}}" method="post">
                                <div class="form-group">
                                    <label for="sponsor_filtre">Nom du Sponsor</label>
                                    <input type="text" name="nomSponsors" id="sponsor_filtre" class="form-control"
                                           placeholder="Nom du Sponsor" {% if post_array is defined %}value="{{post_array.nomSponsors}}"{% endif %}>
                                    <small class="form-text text-muted">chercher par nom</small>
                                </div>
                                <div class="form-group">
                                    <label for="adresse_filtre">Adresse</label>
                                    <input type="text" name="adresse" id="adresse_filtre" class="form-control"
                                           placeholder="adresse" {% if post_array is defined %}value="{{post_array.adresse}}"{% endif %}>
                                    <small class="form-text text-muted">chercher par adresse</small>
                                </div>
                                <div class="form-group">
                                    <label for="eMail_filtre">E-mail</label>
                                    <input type="text" name="eMail" id="eMail_filtre" class="form-control"
                                           placeholder="E-mail" {% if post_array is defined %}value="{{post_array.eMail}}"{% endif %}>
                                    <small class="form-text text-muted">chercher par E-mail </small>
                                </div>
                                <button class="btn custom-butt-2 btn-block"><i class="fa fa-search"></i>Rechercher</button>
                            </form>
                        </div>
