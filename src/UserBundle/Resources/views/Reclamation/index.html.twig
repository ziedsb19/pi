
{% extends "base.html.twig" %}


{% block body -%}

<link href="{{ asset('admin/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">


    <h4>Liste des reclamations</h4>
    

   <div class="table-responsive">
                
                <table class="table table-striped table-hover table-bordered">
                  <thead>
                    <tr>
                     <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Sujet</th>
                <th>Contenue</th>
                <th>Reponse</th>
                <th>Actions</th>
            </tr>
                  </thead>
        
        {% for entity in entities %}
            
                <tbody>
      <tr>
                    <td><a href="{{ path('reclamationsadmin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.utilisateurs}}</td>

                <td>{{ entity.sujet }}</td>
                <td>{{ entity.contenue }}</td>
                <td>{{ entity.reponse }}</td>
                                         

          <td class="action" data-title="Action">
              <div class="">
                  <ul class="list-inline justify-content-center">
                      <li class="list-inline-item">
                          <a class="edit" title="modifier" href="{{ path('reclamations_edit',{'id':entity.id}) }}">
                              <i class="fa fa-edit"></i>
                          </a>
                      </li>
                      <li class="list-inline-item">
                          <a class="delete" title="supprimer" href="{{ path('reclamations_delete',{'id':entity.id}) }}">
                              <i class="fa fa-trash"></i>
                          </a>
                      </li>
                  </ul>
              </div>
          </td>
                    </tr>
                    
                  
                   
                    
                    
                   
                  </tbody>
        {% endfor %}
     
    </table>
  <ul>
        <li>
            <a href="{{ path('reclamationsadmin_new') }}">
                Ajouter Reclamation
            </a>
        </li>
    </ul>
        

    {% endblock %}


