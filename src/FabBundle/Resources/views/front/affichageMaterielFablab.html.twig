{% block dhia %}



    <section id="hotels" class="section-with-bg wow fadeInUp">

        <div class="container">
            <div class="section-header">
                <h2>LISTE DES MATERIELS</h2>

            </div>

            <div class="row">
                {% for mat in mats %}
                    <div class="col-lg-4 col-md-6">
                        <div class="hotel">
                            <div class="hotel-img">
                                <img src="{{ asset('uploads/images/' ~ mat.image) }}"  class="img-fluid">
                            </div>
                            <h3><a href="#">{{ mat.nom }}</a></h3>
                            <p>Prix : {{ mat.prix }}</p>
                            <ul class="nav-menu">

                                <li class="buy-tickets"><a href="{{ path('mat_panier_ajout', {'id':mat.id}) }}">
                                        Ajouter aux panier</a>


                                </li> <li class="buy-tickets"><a href="{{ path('detail_materiel', {'id':mat.id}) }}">    Detail     </a></li>
                            </ul>
                        </div>

