{% extends 'tempAdmin.html.twig' %}

{% block body %}

<div class="col-6 offset-3">
    <h1>TypeLog creation</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
<div class="col-6 offset-3">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('typelog_index') }}">Back to the list</a>
        </li>
    </ul>
</div>

</div>
{% endblock %}
