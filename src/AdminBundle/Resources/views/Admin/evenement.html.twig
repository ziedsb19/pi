{% extends '::base.html.twig' %}

{% block body %}
  <div class="row m-2">
    <div class="col-md-3" >
      <div class="list-group" role="tablist" id="tablist">
        <a class="list-group-item list-group-item-action"  data-toggle="list" id="categories_tab" href="#categories" role="tab" aria-controls="categories"><i class="fas fa-list-ul"></i> liste des categories</a>
        <a class="list-group-item list-group-item-action" data-toggle="list" id="event_signales_tab" href="#event_signales" role="tab" aria-controls="event_signales"><i class="fas fa-flag"></i> evenements signalés</a>
        <a class="list-group-item list-group-item-action" data-toggle="list" id="event_bloques_tab" href="#event_bloques" role="tab" aria-controls="event_bloques"><i class="fas fa-ban"></i> evenements bloqués</a>
      </div>
    </div>

    <div class="col-md-9 ">
      <div class="tab-content">
        <div class="tab-pane fade " id="categories" role="tabpanel" aria-labelledby="categories_tab">
        <h3 class="text-primary"> liste des categories :</h3>
        <hr>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col"><i class="fas fa-check-square"></i> categorie</th>
              <th scope="col"><i class="fas fa-palette"></i> couleur</th>
              <th scope="col"><i class="fas fa-cogs"></i> operations</th>
            </tr>
          </thead>
          <tbody>
            {% for c in categories%}
            <tr>
              <td> {{c.nom}}</td>
              <td> {{c.couleur}}</td>
              <td> <button class="btn btn-danger" id="{{c.id}}"><i class="fas fa-trash-alt" href="#"></i> supprimer</button>
                   <button class="btn btn-outline-secondary" id="{{c.id}}"><i class="fas fa-edit" href="#"></i> modifier</button>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>

        <hr>
        <button class="btn btn-primary" id="ajoutCat" data-toggle="modal" data-target="#formulaire"><i class="fas fa-plus"></i> ajouter une categorie</button>
        <div class="modal fade" id="formulaire" aria-labelledby="ajoutCat" aria-hidden="true" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="ModalScrollableTitle">Ajouter une categorie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form method="post" action="{{path('evenements_add_categorie')}}">
                      <div class="form-group">
                        <label for="name">nom categorie :</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="nom categorie" required>
                      </div>
                      <div class="form-group">
                          <label for="color">couleur categorie :</label>
                          <input type="color" name="color" id="color" class="form-control" placeholder="couleur categorie" required>
                        </div>                      
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <input type="submit" class="btn btn-primary" value='ajouter'>
                  </form>
                  </div>
                </div>
              </div>
        </div>
        </div>
        <div class="tab-pane fade " id="event_signales" role="tabpanel" aria-labelledby="event_signales_tab">
          <div class="alert alert-success">
            <h3 class="alert-heading"> not yet </h3>
            <p> evenements signales</p>
          </div>
        </div>
      </div> 
    </div>
  </div>
{% endblock %}